<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.demo.com.contact.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_weight="0.05"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/maxresdefault" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radio_dept1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Department1"
                android:textAlignment="center" />

            <RadioButton
                android:id="@+id/radio_dept2"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radio_dept3"
                android:layout_alignStart="@+id/radio_dept3"
                android:layout_below="@+id/radio_dept3"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.03"
                android:onClick="onRadioButtonClicked"
                android:text="Department2" />

            <RadioButton
                android:id="@+id/radio_dept3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/radio_dept2"
                android:layout_alignStart="@+id/radio_dept2"
                android:layout_below="@+id/radio_dept2"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:onClick="onRadioButtonClicked"
                android:text="Department3" />
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
